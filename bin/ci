#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    local color=$1
    local message=$2
    echo -e "${color}${message}${NC}"
}

print_header() {
    echo
    print_status $BLUE "=== $1 ==="
}

# Change to gem directory
cd "$(dirname "$0")/.."

print_status $BLUE "ğŸš€ Running CI checks for outbound_http_logger gem"

# Check if we're in the right directory
if [[ ! -f "outbound_http_logger.gemspec" ]]; then
    print_status $RED "âŒ Error: Not in outbound_http_logger gem directory"
    exit 1
fi

# Install dependencies
print_header "Installing Dependencies"
bundle install

# Run tests
print_header "Running Tests"

# Run all tests together (thread-safe with proper isolation)
print_status $BLUE "Running all tests with strict isolation checking..."
export STRICT_TEST_ISOLATION=true

if bundle exec rake test; then
    print_status $GREEN "âœ… All tests passed"
else
    print_status $RED "âŒ Tests failed"
    exit 1
fi

# Run database adapter tests if PostgreSQL is available
if [[ -n "${TEST_POSTGRESQL:-}" ]] || [[ -n "${DATABASE_URL:-}" ]]; then
    print_header "Running PostgreSQL Database Adapter Tests"

    # Set PostgreSQL environment
    export DATABASE_URL="${DATABASE_URL:-postgresql://postgres:@localhost:5432/outbound_http_logger_test}"
    export OUTBOUND_HTTP_LOGGER_TEST_DATABASE_URL="$DATABASE_URL"

    print_status $BLUE "Testing PostgreSQL connection and adapters..."
    if ./bin/test-databases; then
        print_status $BLUE "Running database adapter tests with PostgreSQL..."
        if bundle exec ruby -Itest test/test_database_adapters.rb; then
            print_status $GREEN "âœ… PostgreSQL database adapter tests passed"
        else
            print_status $RED "âŒ PostgreSQL database adapter tests failed"
            exit 1
        fi
    else
        print_status $YELLOW "âš ï¸  PostgreSQL not available, skipping database adapter tests"
    fi

    # Clean up environment variables
    unset DATABASE_URL
    unset OUTBOUND_HTTP_LOGGER_TEST_DATABASE_URL
fi

# Clean up test environment
unset STRICT_TEST_ISOLATION

# Run RuboCop
print_header "Running RuboCop"
if bundle exec rake rubocop; then
    print_status $GREEN "âœ… RuboCop passed"
else
    print_status $YELLOW "âš ï¸  RuboCop found issues (non-blocking for now)"
fi

# Build gem
print_header "Building Gem"
if bundle exec rake build; then
    print_status $GREEN "âœ… Gem built successfully"
else
    print_status $RED "âŒ Gem build failed"
    exit 1
fi

# Validate gemspec
print_header "Validating Gemspec"
# Get the most recently built gem file
LATEST_GEM=$(ls -t pkg/*.gem | head -n 1)
if [ -f "$LATEST_GEM" ] && bundle exec gem specification "$LATEST_GEM" > /dev/null; then
    print_status $GREEN "âœ… Gemspec is valid"
else
    print_status $RED "âŒ Gemspec validation failed"
    exit 1
fi

# Check for TODO/FIXME comments
print_header "Checking for TODO/FIXME Comments"
if grep -r "TODO\|FIXME" lib/ test/ --exclude-dir=.git 2>/dev/null; then
    print_status $YELLOW "âš ï¸  Found TODO/FIXME comments"
else
    print_status $GREEN "âœ… No TODO/FIXME comments found"
fi

# Security audit
print_header "Running Security Audit"
if command -v bundle-audit >/dev/null 2>&1; then
    if bundle-audit check --update; then
        print_status $GREEN "âœ… Security audit passed"
    else
        print_status $YELLOW "âš ï¸  Security audit found issues"
    fi
else
    print_status $YELLOW "âš ï¸  bundle-audit not installed, skipping security check"
    print_status $BLUE "   Install with: gem install bundler-audit"
fi

print_status $GREEN "ğŸ‰ All CI checks completed successfully!"
